<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/card_padding"
    android:paddingBottom="@dimen/card_padding"
    android:paddingLeft="@dimen/card_padding"
    android:paddingRight="@dimen/card_padding"
    android:id="@+id/shift_container">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/textsize_small"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            style="@style/txtShadow"
            android:id="@+id/txt_location" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/txt_begin"
            android:text="@string/time_in"
            android:textSize="@dimen/textsize_small"
            android:labelFor="@+id/txt_begin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/textsize_small"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            style="@style/txtShadow"
            android:id="@+id/txt_begin" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/textsize_small"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            style="@style/txtShadow"
            android:id="@+id/txt_date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/txt_end"
            android:text="@string/time_out"
            android:textSize="@dimen/textsize_small"
            android:labelFor="@+id/txt_end" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/textsize_small"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            style="@style/txtShadow"
            android:id="@+id/txt_end" />

    </RelativeLayout>

</LinearLayout>